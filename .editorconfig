root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{js,vue}]
indent_style = tab
indent_size = 2

[*.{html,xml,go}]
indent_style = tab
indent_size = 4

[*.{yaml,yml,json}]
indent_style = space
indent_size = 2

[*.{py,rb,php,c,h,cpp,cc}]
indent_style = space
indent_size = 4

[{Makefile,makefile}]
indent_style = tab
